
@model ECommerce.Areas.Identity.Pages.Account.LoginModel

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="closeModal">&times;</span>
        <h3>Войти на сайт.</h3>
            <form id="account" asp-area="Identity" asp-page="/Account/Login" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                <div class="form-group">
                    <button id="btnLogin" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                            <a id="forgot-password" asp-area="Identity" asp-page="/ForgotPassword">Forgot your password?</a>
                        </p>
                    <p>
                            <a asp-area="Identity" asp-page="/Account/Register">Register as a new user</a>
                        </p>
                </div>
            </form>
    </div>
</div>